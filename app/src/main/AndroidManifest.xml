<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.youmehe.intellectualpropertyright">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
  <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
  <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
      android:name=".Utils.MyApplication"
      android:allowBackup="true"
      android:icon="@drawable/logo"
      android:label="@string/app_name"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <provider
        android:name="android.support.v4.content.FileProvider"
        android:authorities="com.example.youmehe.intellectualpropertyright.fileprovider"
        android:exported="false"
        android:grantUriPermissions="true">
      <meta-data
          android:name="android.support.FILE_PROVIDER_PATHS"
          android:resource="@xml/filepaths" />
    </provider>

    <activity
        android:name=".Activity.MainActivity"
        android:label="@string/app_name" />
    <activity
        android:name="com.yalantis.ucrop.UCropActivity"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    <activity android:name=".Activity.SignupActivity" />
    <activity android:name=".Activity.LoginActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <service
        android:name="com.avos.avoscloud.PushService"
        android:exported="true" />

    <receiver android:name="com.avos.avoscloud.AVBroadcastReceiver">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
        <action android:name="android.intent.action.USER_PRESENT" />
        <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
        <action android:name="com.avos.UPDATE_STATUS" />
        <action android:name="com.pushdemo.action" />
      </intent-filter>
    </receiver>

    <activity
        android:name=".Activity.ScrollingActivity"
        android:label="知识产权服务平台"
        android:theme="@style/AppTheme.NoActionBar" />
    <activity
        android:name=".Activity.EditUserInfoActivity"
        android:label=""
        android:theme="@style/AppTheme.NoActionBar" />
    <activity
        android:name=".Activity.UserFeedBackActivity"
        android:label=""
        android:theme="@style/AppTheme.NoActionBar" />
    <activity
        android:name=".Activity.AboutUsActivity"
        android:label=""
        android:theme="@style/AppTheme.NoActionBar" />
    <activity
        android:name=".Activity.UpdateServerActivity"
        android:label=""
        android:theme="@style/AppTheme.NoActionBar" />
  </application>

</manifest>