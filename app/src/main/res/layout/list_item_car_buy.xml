<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <android.support.v7.widget.AppCompatCheckBox
      android:id="@+id/item_car_check"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true" />

  <ImageView
      android:layout_toRightOf="@+id/item_car_check"
      android:id="@+id/image_product"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_margin="@dimen/margin_10dp"
      android:src="@drawable/default_head" />

  <TextView
      android:id="@+id/txt_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="专利申请/专利转让-实用新型专利/外观设计/软件著作权/版权"
      android:layout_marginRight="100dp"
      android:layout_toRightOf="@id/image_product"
      android:layout_alignTop="@id/image_product" />

  <TextView
      android:id="@+id/txt_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textColor="@color/primary"
      android:text="@string/price"
      android:textSize="19sp"
      android:layout_marginRight="20dp"
      android:layout_alignTop="@id/txt_title"
      android:layout_alignParentRight="true" />


  <LinearLayout
      android:layout_width="120dp"
      android:layout_height="25dp"
      android:layout_alignParentRight="true"
      android:layout_marginRight="20dp"
      android:layout_alignBottom="@id/image_product"
      android:background="@drawable/feed_back_text_view_bg"
      android:padding="0dp"
      android:orientation="horizontal">

    <TextView
        android:id="@+id/del"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:clickable="true"
        android:background="@drawable/selector_about_linear_layout"
        android:text="-" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="#000000" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:background="@drawable/selector_about_linear_layout"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:text="+" />

  </LinearLayout>

  <include layout="@layout/divider_user_center" />
</RelativeLayout>