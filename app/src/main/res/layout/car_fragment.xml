<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <RelativeLayout
      android:id="@+id/relative_no_data"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone">

    <ImageView
        android:id="@+id/image_car"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/car"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp" />

    <View
        android:layout_toLeftOf="@id/image_car"
        android:layout_width="100dp"
        android:layout_marginTop="285dp"
        android:layout_height="1dp"
        android:background="#c0c0c0" />

    <View
        android:layout_toRightOf="@id/image_car"
        android:layout_width="100dp"
        android:layout_marginTop="285dp"
        android:layout_height="1dp"
        android:background="#c0c0c0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="您的购物车还是空的\n\n快去挑选您满意的知识产权服务吧"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_car"
        android:layout_margin="20dp" />

  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/relative_list"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ListView
        android:id="@+id/list_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:orientation="horizontal">

      <android.support.v7.widget.AppCompatCheckBox
          android:id="@+id/check_car"
          android:gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="全选" />

      <TextView
          android:id="@+id/txt_car_total_price_b"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="合计:  ¥"
          android:layout_marginLeft="100dp"
          android:textSize="14sp"
          android:textColor="@color/primary"
          android:visibility="invisible" />

      <TextView
          android:id="@+id/txt_car_total_price"
          android:layout_width="0dp"
          android:layout_weight="2"
          android:textSize="18sp"
          android:layout_height="wrap_content"
          android:text=""
          android:textColor="@color/primary" />

      <Button
          android:id="@+id/btn_pay"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:background="@color/primary"
          android:textColor="#ffffff"
          android:layout_gravity="right"
          android:text="结算" />
    </LinearLayout>
  </RelativeLayout>
</RelativeLayout>