<!--?xml version=1.0 encoding=utf-8?-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/layout_heigt_150px"
      android:background="#ffffff"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/txt_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="请选择性别"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_55px"
        />
  </RelativeLayout>


  <RadioGroup
      android:id="@+id/txt_dialog_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_25px"
      android:background="@drawable/feed_back_text_view_bg"
      android:textSize="@dimen/text_size_40px"
      >
    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/radio_men"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="男"
        />

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/radio_women"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="女"
        />

    <android.support.v7.widget.AppCompatRadioButton
        android:id="@+id/radio_sercert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保密"
        />
  </RadioGroup>

</LinearLayout>